<tr
  id="order-row-<%= item._id %>"
  class="w-full grid grid-cols-5 gap-3 px-2 md:px-5 py-3 items-center bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600"
>
  <td class="font-semibold text-gray-900 dark:text-white text-xs md:text-base">
    <%= formatDateTime(item.orderPlacedAt) %>
  </td>
  <td class="font-semibold text-gray-900 dark:text-white text-xs md:text-base">
    <%= item.totalQuantity %>
  </td>
  <td class="font-semibold text-gray-900 dark:text-white text-xs md:text-base">
    <%= item.totalPrice.toLocaleString('vi-VN', {style: 'currency', currency:
    'VND'}) %>
  </td>
  <td class="font-semibold text-gray-900 dark:text-white text-xs md:text-base">
    <% switch (item.orderStatus) { case 0: %> Chờ xác nhận <% break; case 1: %>
    Chờ chuẩn bị <% break; case 2: %> Đang giao <% break; case 3: %> Chờ nhận hàng <%
    break; case 4: %> Đã giao <% break; case 5: %> Khách hủy <% break; case 6:
    %> Không hợp lệ <% break; } %>
  </td>
  <td class="flex flex-col md:flex-row text-lg justify-start items-start">
    <a href="/order/<%= item._id %>">
      <button
        class="font-medium text-red-600 dark:text-red-500 hover:underline"
      >
        Chi tiết
      </button>
    </a>
  </td>
</tr>
