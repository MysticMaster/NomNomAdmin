 <form class="max-w-md mx-auto my-4" action="" method="GET">
        <div class="flex">
            <button id="dropdown-button-2" data-dropdown-toggle="dropdown-filter-category"
                    class="flex-shrink-0 z-10 inline-flex items-center py-2.5 px-4 text-xs md:text-sm font-medium text-center text-gray-500 bg-gray-100 border border-gray-300 rounded-s-lg hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-100 dark:bg-gray-700 dark:hover:bg-gray-600 dark:focus:ring-gray-700 dark:text-white dark:border-gray-600"
                    type="button">
                <% if (categoryFilterName.length > 10) { %>
                    <%= categoryFilterName.substring(0, 10) + '...' %>
                <% } else { %>
                    <%= categoryFilterName %>
                <% } %>
                <svg class="w-2.5 h-2.5 ms-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                     viewBox="0 0 10 6">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="m1 1 4 4 4-4"/>
                </svg>
            </button>
            <div id="dropdown-filter-category"
                 class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-full md:w-60 dark:bg-gray-700">
                <ul class="py-2 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="dropdown-button-2">
                    <li>
                        <a href="/product"
                           class="inline-flex w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-600 dark:hover:text-white"
                           role="menuitem">
                            Tất cả
                        </a>
                    </li>
                    <% categories.forEach(item =>{ %>
                        <li>
                            <a href="/product?category=<%= item._id %>"
                               class="inline-flex w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-200 dark:hover:bg-gray-600 dark:hover:text-white"
                               role="menuitem">
                                <div class="flex flex-row items-center">
                                    <img src="<%= item.imageUrl %>"
                                         class="w-16 me-2 rounded-lg md:w-32 max-w-[20px] max-h-[20px] md:max-w-[40px] md:max-h-[40px] object-cover object-center"
                                         alt="Image Url">
                                    <%= item.name %>
                                </div>
                            </a>
                        </li>
                    <% }) %>
                </ul>
            </div>
            <div class="relative w-full">
                <input type="text" id="location-search"
                       name="search"
                       class="block p-2.5 w-full z-20 text-sm text-gray-900 bg-gray-50 rounded-e-lg border-s-gray-50 border-s-2 border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-s-gray-700  dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:border-blue-500"
                       placeholder="Nhập tên sản phẩm cần tìm" required/>
                <button type="submit"
                        class="absolute top-0 end-0 h-full p-2.5 text-sm font-medium text-white bg-blue-700 rounded-e-lg border border-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    <svg class="w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                    </svg>
                    <span class="sr-only">Search</span>
                </button>
            </div>
        </div>
    </form>